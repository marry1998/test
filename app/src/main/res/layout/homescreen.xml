<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/tony_stark_small"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:id="@+id/profilePhoto"
            android:layout_margin="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mariya Khatoon"
            android:layout_gravity="center"
            android:textSize="23sp"
            android:textColor="#222222"
            android:textStyle="bold"
            android:id="@+id/nameText"
            android:layout_toRightOf="@+id/profilePhoto"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mariyacs2020@gmail.com"
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_gravity="center"
            android:id="@+id/emailText"
            android:layout_toRightOf="@+id/profilePhoto"
            android:layout_below="@+id/nameText"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/mynumber"
            android:textSize="18sp"
            android:textColor="#555555"
            android:layout_marginBottom="16dp"
            android:id="@+id/phoneNumberText"
            android:layout_toRightOf="@+id/profilePhoto"
            android:layout_below="@+id/emailText"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/button_education"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EDUCATION"
            android:textColor="#FFFFFF" />
        <Button
            android:id="@+id/button_workexp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WORK EXPERIENCE"
            android:textColor="#FFFFFF" />


    </LinearLayout>


</LinearLayout>
